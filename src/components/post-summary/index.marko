style {
    .post-summary.white {
        background-color: #fff;
    }

    .post-summary .title {
        padding: 20px;
        font-size: 2.6rem;
        font-weight: 700;
    }

    .post-summary .author {
        background-color: #F2F2F2;
        height: 40px;
        padding: 5px 20px;
        box-sizing: border-box;
        line-height: 30px;
    }

    .post-summary .author span {
        font-size: 0.9rem;
    }

    .post-summary .author a {
        margin-left: 10px;
    }

    .post-summary .author span {
        float: right;
    }

    .post-summary .content {
        padding: 20px;
        font-weight: 400;
        line-height: 1.5;
    }
}

